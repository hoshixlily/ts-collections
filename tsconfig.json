{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ESNext",
        "lib": [
            "ES2022"
        ],
        "downlevelIteration": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "preserveConstEnums": true,
        "removeComments": false,
        "sourceMap": true,
        "strict": true,
        "strictFunctionTypes": true,
        "outDir": "./dist"
    },
    "exclude": [
        "node_modules",
        "tests"
    ]
}
